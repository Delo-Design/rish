			then
				echo -e "База mysql с именем ${GREEN}%b${WHITE} создана"
				mysql -uroot -p${MYSQLPASS} -e "GRANT ALL PRIVILEGES ON \`%b\`.* TO '${r}'@'localhost';"
				mysql -uroot -p${MYSQLPASS} -e "FLUSH PRIVILEGES;"
