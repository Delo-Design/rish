    ask() {
		local prompt default reply
		if [ "${2:-}" = "Y" ]; then
		prompt="Y/n или Д/н"
		default=Y
		elif [ "${2:-}" = "N" ]; then
		prompt="y/N или д/Н"
		default=N
		else
		prompt="y/n"
		default=
		fi
		while true; do
		# Ask the question (not using "read -p" as it uses stderr not stdout)
		if [ -z "$1" ]
		then
		echo -n "[$prompt]"
		else
		echo -n "$1 [$prompt] "
		fi
		# Read the answer (use /dev/tty in case stdin is redirected from somewhere else)
		read reply </dev/tty
		# Default?
		if [ -z "$reply" ]; then
		reply=$default
		fi
		# Check if the reply is valid
		case "$reply" in
		Y*|y*|Д*|д*) return 0 ;;
		N*|n*|Н*|н*) return 1 ;;
		esac
		done
    }
	GREEN='\033[0;32m'
	RED='\033[0;31m'
